{
    "name": "Ubuntu",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "features": {
        "ghcr.io/devcontainers/features/hugo:1": {
            "extended": true
        }
    },
    "forwardPorts": [1313],
    "customizations": {
        "vscode": {
            "extensions": [
                "rusnasonov.vscode-hugo",
                "streetsidesoftware.code-spell-checker-dutch",
                "streetsidesoftware.code-spell-checker",
            ]
        }
    },
    "portsAttributes": {
        "1313": {
            "label": "Hugo preview"
        }
    },
}